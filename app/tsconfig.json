//_tsconfig.json_
{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "importHelpers": true,
    "jsx": "react-jsx",
    "module": "es6",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false, // Change to true for production
    "noUnusedParameters": false, // Change to true for production
    "paths": {
      "*": ["*", "types/*"],
      "@evotempus/api": ["./src/api"],
      "@evotempus/assets/*": ["./src/assets/*"],
      "@evotempus/components": ["./src/components"],
      "@evotempus/layout": ["./src/layout"],
      "@evotempus/types": ["./src/types"],
      "@evotempus/utils": ["./src/utils"]
    },
    "strict": true,
    "target": "es6",
  },
  "include": ["src"],
}
